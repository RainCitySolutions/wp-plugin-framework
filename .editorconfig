# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8
indent_style = space
indent_size = 4

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# 4 space indentation
[*.xslt]
indent_style = tab
indent_size = 4

# Matches the exact files either package.json or .yml
[{package.json,.yml}]
indent_style = space
indent_size = 2
